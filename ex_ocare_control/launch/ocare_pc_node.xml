<launch>
    <!-- urdf xml robot description loaded on the Parameter Server-->
	<param name="robot_description" command="$(find xacro)/xacro $(find labrob_description)/urdf/ocare_realworld.urdf.xacro" />
    
    <!-- main PC GUI interface handler node -->
	<node name="ocare_pc_gui" pkg="rqt_gui" type="rqt_gui"  required="false" output="screen" />
    
    <!-- Joy driver for joy_teleop -->
    <node name="joy_driver" pkg="joy" type="joy_node" required="false" />
    
    <!-- Joy teleop node for publish Twist CMD -->
    <node name="joy_cmd_publisher" pkg="ex_ocare_control" type="joy_teleop.py" required="false" />
    
    <!-- remote connect node-->
    <node name="node_syncer" pkg="node_manager_fkie" type="node_manager" required="false" />
    
  <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher_node" output="screen">
    <param name="fixed_frame" value = "odom"/>
    <param name="base_frame" value="base_footprint"/>
    <param name="use_alpha_beta" value="true"/>
    <param name="use_odom" value="false"/>
    <param name="use_imu" value="true"/>
    <param name="max_iterations" value="10"/>
  </node>

  <node pkg="gmapping" type="slam_gmapping" name="scan_slam_gmapping" output="screen">
    <Param name="map_frame" value="map"/>
    <param name="base_frame" value="base_link"/>
    <param name="odam_frame" value="base_footprint"/>
    <param name="maxUrange" value="4.0"/>
    <param name="manRange" value="5.5"/>
    <param name="xmin" value="-12.0"/>
    <param name="ymin" value="-12.0"/>
    <param name="xmax" value="12.0"/>
    <param name="ymax" value="12.0"/>
  </node>

</launch>
